<title> Comments for Ajax in Rails 3.1 </title>

<h3>Add your comment:</h3>

<%= form_for Comment.new, :remote => true do |f| %>
 <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p> 
  <p>
    <%= f.label :content, "Comment" %><br />
    <%= f.text_area :content, :rows => '12', :cols => 35 %>
  </p>
  <p><%= f.submit %></p>
<% end %>
<div id="comments">
  <%= render @comments %>
</div>
